{
  "manifest_version": 2,
  "name": "My Extension",
  "description": "Hi Chrome",
  "version": "1.0.0",
  "background": {
    "scripts":  ["background.js"],
    "persistent": false
  },  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["my-content-script.js"],
      "run_at": "document_end"
    }
  ]
}